{
  "name": "eslint-config-anvilabs",
  "version": "4.0.0",
  "description": "Anvilabs' ESLint config, following our internal styleguide",
  "keywords": [
    "eslint",
    "eslint config",
    "config",
    "anvilabs",
    "styleguide"
  ],
  "repository": "anvilabs/eslint-config-anvilabs",
  "homepage": "https://github.com/anvilabs/eslint-config-anvilabs#readme",
  "bugs": {
    "url": "https://github.com/kentcdodds/eslint-config-kentcdodds/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Ayan Yenbekbay",
    "email": "ayan.yenb@gmail.com",
    "url": "http://yenbekbay.me"
  },
  "engines": {
    "node": ">=6.0",
    "npm": ">=3.0"
  },
  "main": "index.js",
  "files": [
    "index.js",
    "jest.js",
    "lodash.js",
    "react-base.js",
    "react-native.js",
    "react.js"
  ],
  "scripts": {
    "commit": "git-cz",
    "test": "npm-run-all --parallel lint find-new-rules",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "find-new-rules": "npm-run-all --parallel find-new-rules:*",
    "find-new-rules:base": "eslint-find-rules --unused ./index.js",
    "find-new-rules:jest": "eslint-find-rules --unused ./other/test/jest.js",
    "find-new-rules:lodash": "eslint-find-rules --unused ./other/test/lodash.js",
    "find-new-rules:react": "eslint-find-rules --unused ./other/test/react.js",
    "find-new-rules:react-native": "eslint-find-rules --unused ./other/test/react-native.js",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm test",
    "release": "standard-version",
    "postrelease": "git push --follow-tags --no-verify && env-cmd ./.env.github-releaser conventional-github-releaser -p angular"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 72
    }
  },
  "peerDependencies": {
    "eslint": "^3.13.1"
  },
  "dependencies": {
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-eslint-comments": "^1.0.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jasmine": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-no-use-extend-native": "^0.3.12",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-react-native": "^2.2.1",
    "eslint-plugin-unicorn": "^2.0.1"
  },
  "devDependencies": {
    "commitizen": "^2.9.5",
    "conventional-github-releaser": "^1.1.3",
    "cz-conventional-changelog": "^1.2.0",
    "env-cmd": "^4.0.0",
    "eslint": "^3.13.1",
    "eslint-find-rules": "^1.14.3",
    "husky": "^0.12.0",
    "npm-run-all": "^4.0.0",
    "standard-version": "^4.0.0",
    "validate-commit-msg": "^2.8.2"
  }
}
